<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="https://kit.fontawesome.com/1c17e31fd4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.min.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-bg-color">
        <a class="navbar-brand brand-name" href="#">
            <img src="~/images/sun.png" width="50" height="50" class="d-inline-block align-top" alt="">
            BD Weather
        </a>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "WeatherService", new { area = "" }, new { @class = " nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Blog", "Index", "Blog", new { area = "" }, new { @class = " nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = " nav-link" })
                </li>
            </ul>
        </div>
    </nav>



    @RenderBody()
    <hr />
    <div class="footer_part container-fluid">
        <a class="navbar-brand footer-brand-name" href="#">
            <img src="~/images/sun.png" width="40" height="40" class="d-inline-block align-top" alt="">
            BD Weather
        </a>

        <div class="row ml-2">
            <div class="d-inline col-md-6 col-sm-12">
                <div class="row">

                    <div class="ftr-dis-flex col-sm-12 mt-4">
                        <h6 class="connection">connect</h6>
                        <div class="d-flex">
                            <div class="social-media">
                                <a href="#" class="fa fa-facebook"></a>
                                <h6>facebook</h6>
                            </div>
                            <div class="social-media">
                                <a href="#" class="fa fa-twitter"></a>
                                <h6>twitter</h6>
                            </div>
                            <div class="social-media">
                                <a href="#" class="fa fa-youtube"></a>
                                <h6>youtube</h6>
                            </div>
                            <div class="social-media">
                                <a href="#" class="fa fa-google"></a>
                                <h6>google</h6>
                            </div>
                        </div>
                    </div>
                    <div class="ftr-dis-flex  col-sm-12 mt-2">
                        <h6 class="connection mr-4">Pages</h6>
                        <div class="d-flex">
                            <div class="pages-info">
                                <h6> @Html.ActionLink("Home", "Index", "WeatherService", new { area = "" }, new { @class = "pages-info-text" })</h6>
                            </div>
                            <div class="pages-info">
                                <h6> @Html.ActionLink("Blog", "Index", "Blog", new { area = "" }, new { @class = "pages-info-text " })</h6>
                            </div>
                            <div class="pages-info">
                                <h6> @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "pages-info-text " })</h6>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-6 col-sm-12 mt-3 mb-2">
                <div class="card text-center">
                    <h6 class="model-heaing">Subscribe to get weather info</h6>
                    <form class="form-inline m-3 justify-content-center">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Email address" aria-label="Email address" aria-describedby="basic-addon2" size="40">
                            <div class="input-group-append">
                                <button class="btn btn-color" type="button">Subscribe</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
        <div class=" b-top ml-2">
            <p class="text-white bold">&copy; Copyright 2020 - BD Weather</p>
            <h6 class="text-white">Enjoy the day with todays weather</h6>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
