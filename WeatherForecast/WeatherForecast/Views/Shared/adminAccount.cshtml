<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.min.css" rel="stylesheet" />
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="https://kit.fontawesome.com/1c17e31fd4.js" crossorigin="anonymous"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-bg-color">
        <a class="navbar-brand brand-name" href="#">
            <img src="~/images/sun.png" width="50" height="50" class="d-inline-block align-top" alt="">
            BD Weather
        </a>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "WeatherService", new { area = "" }, new { @class = " nav-link" })
                </li>

            </ul>
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()

                    <ul class="nav navbar-nav navbar-right">

                        <li class="nav-item dropdown">
                            @*@Html.ActionLink("Hello " + User.Identity.Name + "!", "MyProfile", "Account", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link dropdown-toggle", data_toggle="", role="button", aria_haspopup="true", aria_expanded="false" })*@
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"> @User.Identity.Name </a>
                            <div class="dropdown-menu">
                                @Html.ActionLink("View Profile", "MyProfile", "Account", new { area = "" }, new { @class = "dropdown-item nav-link" })
                                @Html.ActionLink("Appointments", "Appointments", "Account", new { area = "" }, new { @class = "dropdown-item nav-link" })
                            </div>
                        </li>

                        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Log off</a></li>
                    </ul>
                }
            }
            else
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Log in", "Login", "Admin", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink", @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Register", "Register", "Admin", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink", @class = "nav-link" })
                    </li>
                </ul>
            }

        </div>
    </nav>

            @RenderBody()
            <hr />

    <div class="footer_part container-fluid">
        <a class="navbar-brand footer-brand-name" href="#">
            <img src="~/images/sun.png" width="40" height="40" class="d-inline-block align-top" alt="">
            BD Weather
        </a>


        <div class=" b-top ml-2">
            <p class="text-white bold">&copy; Copyright 2020 - BD Weather</p>
            <h6 class="text-white">Enjoy the day with todays weather</h6>
        </div>

    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)




</body>
</html>


